<Page x:Class="Cinema.Pages.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cinema.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WelcomePage" Loaded="Page_Loaded">

    <Grid>
        <DockPanel x:Name="dockPanel" Margin="22,22,18,18">
            <Image x:Name="paulina" HorizontalAlignment="Left" Source="../Graphics/paulina.png"/>
            <Canvas>
                <Image x:Name="bubble0" Width="300" Height="250" VerticalAlignment="Top" HorizontalAlignment="Right" Source="../Graphics/bubble.png"/>
                <TextBox x:Name="text0" Width="225" Height="148" Canvas.Left="28" Canvas.Top="15" HorizontalAlignment="Center" VerticalAlignment="Top" Visibility="Visible" Background="{x:Null}" BorderBrush="{x:Null}" IsReadOnly="True" IsEnabled="False" TextWrapping="Wrap"/>
            </Canvas>
        </DockPanel>
    </Grid>
</Page>
